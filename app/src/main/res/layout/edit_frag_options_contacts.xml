<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/edit_frag_options_mobile_hide_show_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:buttonTint="@color/primary_color"
        android:text="Show/Hide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fonts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Fonts:"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_frag_options_mobile_hide_show_btn" />

    <Spinner
        android:id="@+id/mobileFontSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/fonts_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fonts_title"
        app:layout_constraintTop_toTopOf="@+id/fonts_title" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Font Size:"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fonts_title" />

    <com.google.android.material.slider.Slider
        android:id="@+id/edit_user_mobile_size_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:value="14"
        android:valueFrom="0"
        android:valueTo="28"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/mobileFontColorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Font Color:"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_user_mobile_size_slider" />
    <codes.side.andcolorpicker.hsl.HSLColorPickerSeekBar
        android:id="@+id/mobileHueSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hslColoringMode="pure"
        android:paddingVertical="10dp"
        app:hslMode="hue"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/mobileFontColorTitle"
        />

    <codes.side.andcolorpicker.hsl.HSLColorPickerSeekBar
        android:id="@+id/mobileLightnessSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="10dp"
        app:hslColoringMode="pure"
        app:hslMode="lightness"
        app:layout_constraintTop_toBottomOf="@+id/mobileHueSeekBar"
        />


</androidx.constraintlayout.widget.ConstraintLayout>